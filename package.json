{
  "name": "la-granja-poker",
  "private": true,
  "scripts": {
    "dev:web": "pnpm --filter web dev",
    "dev:timer": "pnpm --filter timer dev",
    "dev:control": "pnpm --filter control dev",
    "build": "pnpm -r build",
    "build:deploy": "pnpm build:deploy:clean && pnpm build:deploy:apps && pnpm build:deploy:merge",
    "build:deploy:clean": "rimraf apps/web/dist apps/timer/dist apps/control/dist",
    "build:deploy:apps": "pnpm --filter web build && pnpm --filter timer build && pnpm --filter control build",
    "build:deploy:merge": "cpx \"apps/timer/dist/**\" apps/web/dist/reloj && cpx \"apps/control/dist/**\" apps/web/dist/control",
    "lint": "pnpm -r lint"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  },
  "devDependencies": {
    "cpx2": "^8.0.0",
    "cpy-cli": "^7.0.0",
    "rimraf": "^6.1.2",
    "sharp": "^0.34.5",
    "typescript": "~5.9.3"
  }
}
